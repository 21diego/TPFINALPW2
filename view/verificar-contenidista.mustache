<div class="d-flex justify-content-center py-3">

    <div style="width: 40rem;" {{#error}}class="card border-danger"{{/error}}{{^error}}class="card"{{/error}}>
        <div class="card-header text-center">
            Complete con los datos de la editorial
        </div>
        <div class="card-body">
            <form action="/contenidista/verificar" method="post">
                <fieldset>
                    <div class="form-group">
                        <label for="cuit">CUIT (sin guiones)</label>
                        <input type="number" id="cuit" name="cuit" class="form-control" value="{{data.nombre}}" autocomplete="off" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Solicitar</button>
                </fieldset>
            </form>
        </div>
        {{#error}}
            <div class="p-2 bd-highlight">
                <div class="alert alert-danger" role="alert">
                    {{error}}
                </div>
            </div>
        {{/error}}

    </div>
</div>

