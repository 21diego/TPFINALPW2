
    <div class="d-flex justify-content-center py-3">

        <div style="width: 40rem;" {{#error}}class="card border-danger"{{/error}}{{^error}}class="card"{{/error}}>
            <div class="card-header text-center">
                Crea una Publicacion!
            </div>
            <div class="card-body">
                {{#publicacion}}
                <form action="editarPublicacion" method="post" enctype="multipart/form-data">
                    <input type="hidden" value="{{publicacion.idpublicacion}}" name="idpublicacion">
                {{/publicacion}}
                {{^publicacion}}
                <form action="crearPublicacion" method="post" enctype="multipart/form-data">
                {{/publicacion}}

                    <fieldset>
                        <div class="form-group">
                            <label for="nombre">Agregue un titulo a la publicacion:</label>
                            <input type="text" id="nombre" name="nombre" class="form-control" value="{{publicacion.nombre}}" autocomplete="off" required>
                        </div>
                        {{#publicacion}}
                            <div class="form-group">
                                <label for="portada">Cambiar portada:</label>
                                <input type="file" id="portada" name="portada"
                                       class="form-control" autocomplete="off" value="">
                            </div>
                        {{/publicacion}}
                        {{^publicacion}}
                            <div class="form-group">
                                <label for="portada">Agregue una imagen para la portada:</label>
                                <input type="file" id="portada" name="portada"
                                       class="form-control" autocomplete="off" value="">
                            </div>
                        {{/publicacion}}
                        <button type="reset" class="btn btn-danger">Limpiar campos</button>
                        {{#publicacion}}
                            <button type="submit" class="btn btn-success">Editar</button>
                        {{/publicacion}}
                        {{^publicacion}}
                            <button type="submit" class="btn btn-success">Crear!</button>
                        {{/publicacion}}

                    </fieldset>
                </form>
            </div>
            {{#error}}
                <div class="p-2 bd-highlight">
                    <div class="alert alert-danger" role="alert">
                        {{error}}
                    </div>
                </div>
            {{/error}}

        </div>
    </div>


