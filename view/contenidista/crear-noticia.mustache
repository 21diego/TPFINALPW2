<div class="d-flex justify-content-center py-3">

    <div style="width: 40rem;" {{#error}}class="card border-danger"{{/error}}{{^error}}class="card"{{/error}}>
        <div class="card-header text-center">
            Crea una noticia!
        </div>
        <div class="card-body">
            {{#noticia}}
                <form action="editarNoticia" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{noticia.idnoticia}}" name="idnoticia">
            {{/noticia}}
            {{^noticia}}
            <form action="crearNoticia" method="post" enctype="multipart/form-data">
                {{/noticia}}
                <fieldset>
                    <div class="form-group">
                        <label for="titulo">Agregue un titulo:</label>
                        <input type="text" id="titulo" name="titulo" class="form-control" value="{{noticia.titulo}}" autocomplete="off" required>
                    </div>
                    <div class="form-group">
                        <label for="cuerpo">Ingrese el cuerpo de la noticia:</label>
                        <textarea id="cuerpo" name="cuerpo" class="form-control"autocomplete="off"
                               required>{{noticia.cuerpo}}</textarea>
                    </div>
                    {{#noticia}}
                        <div class="form-group">
                            <label for="image">Cambiar imagen:</label>
                            <input type="file" id="image" name="image"
                                   class="form-control" autocomplete="off" value="">
                        </div>
                        {{/noticia}}
                    {{^noticia}}
                    <div class="form-group">
                        <label for="image">Agregue una imagen:</label>
                        <input type="file" id="image" name="image"
                               class="form-control" autocomplete="off" value="" required>
                    </div>
                    {{/noticia}}
                    <div class="form-group">
                        <label for="seccion">Elija una seccion:</label>
                        <select id="seccion" name="seccion">
                        {{#secciones}}
                           <option value="{{idseccion}}">{{nombre}}</option>
                        {{/secciones}}
                        </select>
                    </div>
                    {{#noticia}}
                    <button type="submit" class="btn btn-success">Editar</button>
                    {{/noticia}}
                    {{^noticia}}
                    <button type="submit" class="btn btn-success">Guardar</button>
                    {{/noticia}}
                    <button type="reset" class="btn btn-danger">Limpiar campos</button>
                </fieldset>
            </form>
        </div>
        {{#error}}
            <div class="p-2 bd-highlight">
                <div class="alert alert-danger" role="alert">
                    {{error}}
                </div>
            </div>
        {{/error}}

    </div>
</div>

